<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Pet Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link to the CSS stylesheet -->
    <link rel="stylesheet" href="/create-pet.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Back Button -->
    <a href="/" class="back-button">‚Üê Back to Home</a>
    <div class="form-container">
        <h1>Create a Pet Profile</h1>
        <form action="/pets" method="POST" enctype="multipart/form-data">
            <!-- Pet Name -->
            <div class="form-group">
                <label for="name">Pet Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <!-- Age -->
            <div class="form-group">
                <label for="age">Age (years):</label>
                <input type="number" id="age" name="age" required>
            </div>
            <!-- Price -->
            <div class="form-group">
                <label for="price">Adoption Fee ($):</label>
                <input type="number" id="price" name="price" required>
            </div>
            <!-- Location -->
            <div class="form-group">
                <label for="state">State:</label>
                <select id="state" name="location[state]" required>
                    <option value="">Select a State</option>
                    <% const states = ['AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA', 'HI', 'ID',
                    'IL', 'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MD', 'MA', 'MI', 'MN', 'MS', 'MO', 'MT',
                    'NE', 'NV', 'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC',
                    'SD', 'TN', 'TX', 'UT', 'VT', 'VA', 'WA', 'WV', 'WI', 'WY']; %>
                    <% states.forEach(s => { %>
                        <option value="<%= s %>"><%= s %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="city">City:</label>
                <input type="text" id="city" name="location[city]" placeholder="Enter City" required>
            </div>
            <!-- Breed -->
            <div class="form-group">
                <label for="breed">Breed:</label>
                <input type="text" id="breed" name="breed" required>
            </div>
            <!-- Behavior -->
            <div class="form-group">
                <label for="behavior">Behavior:</label>
                <input type="text" id="behavior" name="behavior" required>
            </div>
            <!-- Profile Image -->
            <div class="form-group">
                <label for="profileImage">Profile Image:</label>
                <input type="file" id="profileImage" name="profileImage" accept="image/jpeg, image/png, image/webp" required>
            </div>
            <!-- Description -->
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description"></textarea>
            </div>
            <!-- History -->
            <div class="form-group">
                <label for="history">History:</label>
                <textarea id="history" name="history"></textarea>
            </div>
            <!-- Additional Images -->
            <div class="form-group">
                <label for="images">Additional Images (up to 5):</label>
                <input type="file" id="images" name="images" accept="image/jpeg, image/png, image/webp" multiple>
            </div>
            <!-- Submit Button -->
            <button type="submit">Add Pet</button>
        </form>
    </div>
    <!-- Ionicons for Icons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Admin Dashboard</h1>

    <h2>Manage Users</h2>
    <ul>
        <% users.forEach(user => { %>
            <li>
                <%= user.username %> - <%= user.email %> 
                <% if (!user.admin) { %>
                    <form action="/admin/delete-user/<%= user._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete User</button>
                    </form>
                <% } %>
            </li>
        <% }); %>
    </ul>

    <h2>Manage Pets</h2>
    <ul>
        <% pets.forEach(pet => { %>
            <li>
                <%= pet.name %> (Breed: <%= pet.breed %>)
                <form action="/admin/delete-pet/<%= pet._id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete Pet</button>
                </form>
                <a href="/pets/edit/<%= pet._id %>">Edit</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>

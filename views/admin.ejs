<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Admin Dashboard</h1>

    <section>
        <h2>Manage Users</h2>
        <% if (users.length > 0) { %>
            <ul>
                <% users.forEach(user => { %>
                    <li>
                        <strong><%= user.username %></strong> - <%= user.email %>
                        <form action="/admin/delete-user/<%= user._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete User</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No non-admin users to display.</p>
        <% } %>
    </section>

    <section>
        <h2>Manage Pets</h2>
        <% if (pets.length > 0) { %>
            <ul>
                <% pets.forEach(pet => { %>
                    <li>
                        <strong><%= pet.name %> (Breed: <%= pet.breed %>)</strong>
                        <a href="/pets/<%= pet._id %>">View Details</a>
                        <!-- Delete Pet Form -->
                        <form action="/pets/delete/<%= pet._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete Pet</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No pets available for review.</p>
        <% } %>
    </section>
    

</body>
</html>
